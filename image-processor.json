{
  "targets": {
    "full": {
      "mode": "do_not_scale",
      "filenameSuffix": "",
      "formats": ["png"]
    },
    "small": {
      "mode": "keep-aspect",
      "width": 200,
      "height": 200,
      "filenameSuffix": "-small",
      "formats": ["png", "webp", "jpeg"]
    }
  },
  "formatOptions": {
    "png": {
      "progression": false,
      "compressionLevel": 6,
      "quality": 100,
      "force": true
    },
    "webp": {
      "quality": 80,
      "alphaQuality": 100,
      "lossless": false,
      "nearLossless": false,
      "reductionEffort": 4,
      "force": true
    }
  }
}
